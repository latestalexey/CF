	//строки после "Ответы:" помещаются в регистр ФСФРБазовыйОтветы
	//
	
	сч=0; //счетчик строк массива
	
	Пока сч<=МассивСтрок.Количество() Цикл
		
		Стр = МассивСтрок[сч];
